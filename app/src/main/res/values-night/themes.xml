<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eposeaandroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_A700</item>
        <item name="colorPrimaryVariant">@color/indigo_A100</item>
        <item name="colorPrimaryDark">@color/indigo_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_yellow_A100</item>
        <item name="colorSecondaryVariant">@color/light_yellow_A200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>

        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="errorTextColor">@color/red_A200</item>
    </style>

    <style name="ColoredIcon">
        <item name="android:tint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="DrawableTextView" parent="Widget.AppCompat.TextView">
        <item name="drawableTint">?attr/colorPrimaryVariant</item>
        <item name="drawableTintMode">multiply</item>
    </style>

    <style name="DrawableTextViewError" parent="Widget.AppCompat.TextView">
        <item name="drawableTint">?attr/colorError</item>
        <item name="drawableTintMode">multiply</item>
    </style>

    <style name="CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>