<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_standard"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="@dimen/card_elevation_standard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_institutionInitials"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:background="@drawable/shape_institution_image"
            android:gravity="center"
            android:padding="@dimen/padding_standard"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:text="ЧНУиПМ" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView_institutionTitle"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_standard"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAlignment="center"
            tools:text="ЧНУ им. Петра Могилы" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>